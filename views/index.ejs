<% include header %>
<% if (entries.length) { %>
	<% entries.forEach(function(entry) { %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="text-muted pull-right">
				  <%= entry.published_at %>
				</div>
				<%= entry.title %>
			</div>
			<div class="panel-body">
				<%= entry.content %>
			</div>	
		</div>
	<% }) %>
<% } else { %>
	No entries found! <a href="/new-entry">Add new entry!</a>
<% } %>
<% include footer %>